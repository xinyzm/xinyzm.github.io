<% if (site.posts.length) { %>
  <p class="sidebar-title">新作</p>
  <div class="widget">
    <ul>
      <% site.posts.sort('date', -1).limit(5).each(function(post) { %>
        <li>
          <a href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a>
        </li>
      <% }) %>
    </ul>
  </div>
<% } %>